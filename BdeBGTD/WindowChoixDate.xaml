<Window x:Class="BdeBGTD.WindowChoixDate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BdeBGTD"
        mc:Ignorable="d"
        Title="WindowChoixDate" Height="300" Width="300"
        ResizeMode="NoResize"
         WindowStartupLocation="CenterOwner">
    <Window.CommandBindings>
        <CommandBinding Command="{x:Static local:WindowChoixDate.AnnulerCmd}"
          Executed="Annuler_Executed"
          CanExecute="Annuler_CanExecute"
          />
    </Window.CommandBindings>
    <Grid >
        
        <StackPanel>
            <TextBlock x:Name="title" Text="Titre" FontWeight="Bold" FontSize="25"  VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
            <Calendar x:Name="calendrier" Height="167" Width="183" Margin="10" VerticalAlignment="Center" MouseDoubleClick="Calendar_MouseDoubleClick" />
            <Button Content="Annuler" Width="50" Margin="10" Command="{x:Static local:WindowChoixDate.AnnulerCmd}"/>
        </StackPanel>
    </Grid>
</Window>
