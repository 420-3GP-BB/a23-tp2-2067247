<Window
    x:Class="BdeBGTD.WindowTraiterAction"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BdeBGTD"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="WindowTraiterAction"
    Width="525"
    Height="375"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <TextBox
                x:Name="titre"
                Width="500"
                Height="25"
                Margin="5" />
            <TextBox
                x:Name="decription"
                Width="500"
                Height="230"
                Margin="5" />
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">
                <Button
                    Width="125"
                    Margin="25"
                    Click="terminer_Click"
                    Content="Terminer action"
                    FontSize="15" />
                <Button
                    Width="125"
                    Margin="25"
                    Click="poursuivre_Click"
                    Content="Poursuivre action"
                    FontSize="15" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
