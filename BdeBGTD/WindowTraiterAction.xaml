<Window x:Class="BdeBGTD.WindowTraiterAction"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BdeBGTD"
        mc:Ignorable="d"
        Title="WindowTraiterAction" Height="375" Width="525" ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel>
            <TextBox x:Name="titre" Width="500" Height="25" Margin="5" />
            <TextBox x:Name="decription" Width="500" Height="230" Margin="5" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                <Button FontSize="15" Width="125"  Content="Terminer action" Margin="25" Click="terminer_Click"/>
                <Button FontSize="15" Width="125"  Content="Poursuivre action" Margin="25" Click="poursuivre_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
